        <Card title={t("header.title")} description={t("projects.description-p2")}>
            <a href="https://github.com/KevinJuela20/Portfolio" class=" mt-2 p-2 hover:shadow hover:shadow-orange-400"> <i class="fab fa-github"> GitHub</i></a>
        </Card>
        <Card title={t("projects.title-p3")} description={t("projects.description-p3")}>
