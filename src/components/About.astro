---
import { t } from "i18next";
import { Trans} from "astro-i18next/components";
---

<div  class="flex flex-col  p-8  w-full" >
    <div class="mt-28 flex justify-center">
        <h1 class="font-bold text-4xl text-gradient mb-2 sm:mb-0">{t("about.title")}</h1>
    </div>

    <div class=" bg-opacity-20 bg-gray-400 p-4 pl-10">
        <Trans i18nKey="about.greeting">
            <h1 class="sm:text-5xl sm:p-2 text-xl p-1">¡Hola! Soy <b class="text-orange-400">Fernando Juela</b></h1>
        </Trans>
        <span class="sm:text-3xl pb-1 sm:border-b-2 border-b-1 border-orange-500">{t("about.specialization")}</span>
        <br>
        <br>
        <p class="sm:text-xl text-sm">{t("about.introduction")}</p>
        <br>
        <Trans i18nKey="about.date">
            <p class="sm:text-lg sm:border-l-4 text-sm border-l-2 pl-2 border-orange-500 m-1"><b>Fecha de nacimiento:</b> 20/03/2000</p>
        </Trans>
        <Trans i18nKey="about.address">
            <p class="sm:text-lg sm:border-l-4 text-sm border-l-2 pl-2 border-orange-500 m-1"><b>País:</b> Ecuador</p>
        </Trans>
        <Trans i18nKey="about.age">
            <p class="sm:text-lg sm:border-l-4 text-sm border-l-2 pl-2 border-orange-500 m-1"><b>Edad:</b> 24</p>
        </Trans>
        <br>
        <span class="sm:text-3xl pb-1 sm:border-b-2 border-b-1 border-orange-500"> <b>Skills</b></span>
        <br>
        <p class="flex flex-row items-center">
            <span><img class="sm:w-14 sm:mr-4 w-6 mr-2" src="https://cdn.worldvectorlogo.com/logos/angular-icon-1.svg" alt="Angular"></span>
            <span><img class="sm:w-14 sm:mr-4 w-6 mr-2" src="https://cdn.worldvectorlogo.com/logos/flask.svg" alt="Flask"></span>
            <span><img class="sm:w-14 sm:mr-4 w-6 mr-2" src="https://cdn.worldvectorlogo.com/logos/astrojs.svg" alt="Astro"></span>
            <span><img class="sm:w-14 sm:mr-4 w-6 mr-2" src="https://cdn.worldvectorlogo.com/logos/spring-3.svg" alt="Spring Boot"></span>
            <span><img class="sm:w-14 sm:mr-4 w-6 mr-2" src="https://cdn.worldvectorlogo.com/logos/python-5.svg" alt="Python"></span>
            <span><img class="sm:w-14 sm:mr-4 w-6 mr-2" src="https://cdn.worldvectorlogo.com/logos/tensorflow-2.svg" alt="TensorFlow"></span>
            <span><img class="sm:w-14 sm:mr-4 w-6 mr-2" src="https://cdn.worldvectorlogo.com/logos/javascript-1.svg" alt="JavaScript"></span>
            <span><img class="sm:w-14 sm:mr-4 w-6 mr-2" src="https://cdn.worldvectorlogo.com/logos/tailwind-css-2.svg" alt="Tailwind CSS"></span>
            <span><img class="sm:w-14 sm:mr-4 w-6 mr-2" src="https://cdn.worldvectorlogo.com/logos/java-4.svg" alt="Java"></span>
            <span><img class="sm:w-14 sm:mr-4 w-6 mr-2" src="https://cdn.worldvectorlogo.com/logos/bootstrap-5-1.svg" alt="Bootstrap"></span>
        </p>
        
    </div>
</div>

